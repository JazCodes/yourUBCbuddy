		<div id="UBC-classes-feedback">
			<div class="row">
				<div class="col-sm-4" style="background-color:lightgrey; padding-bottom: 300px; padding-top: 30px;">
					<!-- .col-sm-4 -->
					<h3 style="font-weight: bold;">POST YOUR FEEDBACK!</h3>
					<div id="searchForUBCClassesDiv" align="center">
<!-- 						<input id="subjectCode" name="subject" class="formContentSmaller" placeholder="CPSC">
						<input id="courseCode" name="course" class="formContentSmaller" placeholder="310"> -->
						<h4 id="subjCodeH4" name="subjCodeH4"></h4>
						<h4 id="courseNumH4" name="courseNumH4"></h4>
						<textarea rows="10" cols="40" id="feedback" name="feedback" placeholder="I learned a lot from the class because.." type="textbox" style=" font-size: 15px;"> </textarea>
						<br>
						<button id="postFeedback" class="formButton" type="submit">POST FEEDBACK</button>
			</div>
				</div>
				<div class="col-sm-8" style="background-color:#0E2F44; color: white; padding-top: 30px;">
					<!-- .col-sm-8 -->
					<h3 style="font-weight: bold; background-color: white; color: black; padding: 2%;" align="center">FEEDBACK:</h3>
					<div id="classFeedbackDiv">
					</div>

				<% for (var i in feedbackRes) { %> 
				   <% if (feedbackRes.hasOwnProperty(i)){ %>
					<article>
						<b><%= feedbackRes[i].sender_username %>: </b>
						<i><%= feedbackRes[i].feedback %></i>
					</article>
					<% } %>
				<% } %>

				</div>
			</div>
		</div>
