							 <input id="course_code" name="course_code" class="formContentSmaller" placeholder="310">
							 <!-- <input name="course_section" class="formContentSmaller" placeholder="101"> -->
							
				<button id="getClassFeedbackButton" class="formButton" type="submit">SEARCH CLASS FEEDBACK</button>
							</div>
						</form>
